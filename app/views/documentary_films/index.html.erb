<h1>Documentary Films List</h1>

<ul>
  <% @documentary_films.each do |doc_film| %>
    <li>
      <strong>Name:</strong> <%= doc_film.name %><br>
      <strong>Synopsis:</strong> <%= doc_film.synopsis %><br>
      <strong>Director:</strong> <%= doc_film.director %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add New Documentary Film', new_documentary_film_path %>
